body {
  padding-top: 50px;
}
/*购物车标题*/
.car_title {
  padding-top: 30px;
}
.car_title h4 {
  font-weight: bolder;
  margin-left: 25px;
}
/*分隔符*/
.separator {
  height: 2px;
  background-color: #52616b;
  margin: 10px 0;
}
/*购物车项目*/
.shopping_car_item {
  height: 130px;
  line-height: 130px;
  overflow: hidden;
  font: 400 0.8em '微软雅黑';
}
.shopping_car_item > div:first-child {
  padding-left: 100px;
}
.shopping_car_item > div:not(:first-child) {
  margin-top: 40px;
}
.shopping_car_item input[type=checkbox] {
  margin-top: 43.33333333px;
  margin-left: -55px;
}
.shopping_car_item .item_title {
  height: 130px;
  margin-left: 220px;
}
.shopping_car_item .item_title div {
  display: inline-block;
  line-height: 1em;
}
.shopping_car_item a {
  display: inline-block;
  height: 130px;
}
.shopping_car_item a img {
  height: 86.66666667px;
  width: 130px;
}
.shopping_car_item .num_control {
  display: inline-block;
  line-height: 1em;
  padding: 3px 8px;
  border: 1px solid #1e2022;
}
.shopping_car_item .num_control:not(:nth-child(2)):hover {
  cursor: pointer;
}
.shopping_car_item .num_control:nth-child(2) {
  border-left: none;
  border-right: none;
}
/*购物车脚*/
.car_footer {
  background-color: #fff;
  height: 100px;
  padding-top: 35px;
  border: 1px solid #c9d6df;
  margin-top: 50px;
  margin-bottom: 20px;
}
.car_footer input {
  position: relative;
  top: 3px;
}
.car_footer span {
  font: 400 0.8em '微软雅黑';
}
.car_footer .two_line:not(a) {
  position: relative;
  top: -0.8em;
}
.car_footer a.two_line {
  position: relative;
  top: -0.5em;
}
