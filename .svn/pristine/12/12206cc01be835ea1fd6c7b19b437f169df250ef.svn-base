@theme-white: #f0f5f9;
@theme-lighter: #c9d6df;
@theme-darker: #52616b;
@theme-black: #1e2022;
@item_height: 130px;
@content-font: 400 .8em '微软雅黑';
body{
    padding-top: 50px;
}
/*购物车标题*/
.car_title {
    padding-top+: 30px;
    h4 {
        font-weight: bolder;
        margin-left: 25px;
    }
}
/*分隔符*/
.separator {
    height: 2px;
    background-color: @theme-darker;
    margin: 10px 0;
}
/*购物车项目*/
.shopping_car_item {
    height: @item_height;
    line-height: @item_height;
    overflow: hidden;
    font: @content-font;

    > div:first-child {
        padding-left: 100px;
    }
    >div:not(:first-child){
        margin-top+: 40px;
    }
    input[type=checkbox] {
        margin-top: @item_height/3;
        margin-left: -55px;
    }
    .item_title {
        height: @item_height;
        margin-left: 20px;

        div {
            display: inline-block;
            line-height: 1em;
        }
    }
    a {
        display: inline-block;
        height: @item_height;
        img {
            height: @item_height*2/3;
            width: @item_height;
        }
    }

    .num_control {
        display: inline-block;
        line-height: 1em;
        padding: 3px 8px;
        border: 1px solid @theme-black;
    }
    .num_control:not(:nth-child(2)):hover{
        cursor: pointer;
    }
    .num_control:nth-child(2) {
        border-left: none;
        border-right: none;
    }
}
/*购物车脚*/
.car_footer{
    background-color: #fff;
    height: 100px;
    padding-top+: 35px;
    border: 1px solid @theme-lighter;
    margin-top: 50px;
    margin-bottom+: 20px;
    input{
        position: relative;
        top: 3px;
    }
    span{
        font: @content-font;
    }
    .two_line:not(a){
        position: relative;
        top: -.8em;
    }
    a.two_line{
        position: relative;
        top: -.5em;
    }
}