/*----------account-bind*/
.account-bind {
    margin-top: 20px;
}

.icon-bind {
    margin-top: 30px;
    height: 40px;
}

.icon-bind > div {
    float: left;
    width: 40px;
    height: 40px;
    background-color: #aaaaaa;
    text-align: center;
    margin-right: 40px;
}

.icon-bind > div:hover {
    background-color: #32b16c;
}

.icon-bind > div > i {
    margin-top: 12px;
    color: #f0f0f0;
}

.icon-bind > div > .fa-mobile {
    margin-top: 4px;
}