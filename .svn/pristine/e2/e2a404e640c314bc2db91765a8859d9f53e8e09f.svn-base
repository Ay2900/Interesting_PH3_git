section:first-of-type {
  padding-top: 50px;
}
section:first-of-type .afflatus-Banner {
  background-image: url(../../../images/show_comments/banner.jpg);
}
@media screen and (min-width: 1500px) {
  .comment_wrapper {
    width: 1380px;
  }
}
@media screen and (min-width: 1250px) and (max-width: 1500px) {
  .comment_wrapper {
    width: 1150px;
  }
}
@media screen and (min-width: 1000px) and (max-width: 1250px) {
  .comment_wrapper {
    width: 920px;
  }
}
@media screen and (min-width: 750px) and (max-width: 1000px) {
  .comment_wrapper {
    width: 690px;
  }
}
@media screen and (min-width: 500px) and (max-width: 750px) {
  .comment_wrapper {
    width: 460px;
  }
}
@media screen and (max-width: 250px) {
  .comment_wrapper {
    width: 230px;
  }
}
.comment_wrapper {
  margin: 0 auto;
}
.comment_wrapper .one_col {
  width: 230px;
  float: left;
}
.comment_wrapper .one_col .single_comment {
  display: block;
  cursor: pointer;
  margin: 20px 10px;
}
.comment_wrapper .one_col .single_comment > img {
  width: 100%;
}
.comment_wrapper .one_col .single_comment > div {
  padding: 20px;
  background-color: #fff;
  font-size: 5px;
}
.comment_wrapper .one_col .single_comment .user_icon {
  height: 30px;
  margin-right: 5px;
  width: 30px;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}
.comment_wrapper .one_col .single_comment .user_info {
  float: left;
}
.comment_wrapper .one_col .single_comment .pic_num {
  float: right;
}
.modal-dialog {
  width: auto;
}
#comment_modal div.modal-content {
  width: 80vw;
  position: center;
  margin: 0 auto;
}
#comment_modal div.left {
  float: left;
  width: 80%;
  min-height: 85vh;
}
#comment_modal div.left img {
  width: 100%;
}
#comment_modal div.right {
  float: right;
  width: 19%;
  min-height: 85vh;
}
#comment_modal div.right .comment_header {
  padding: 5px 0;
  border-bottom: 1px solid gray;
}
#comment_modal div.right .comment_header > div:first-child {
  float: left;
}
#comment_modal div.right .comment_header > div:nth-child(2) {
  float: right;
}
#comment_modal div.right .comment_header > div:nth-child(2) img {
  height: 30px;
  width: 30px;
  border-radius: 50%;
}
#comment_modal div.right .comment_content {
  padding: 5px;
}
#comment_modal div.right a {
  display: block;
  width: 50%;
  margin: 0 auto;
}
#comment_modal div.right a img {
  width: 100%;
}
